<h1><%= title %></h1>

<!-- Flash message display -->
<% if (typeof notice !== 'undefined' && notice.length > 0) { %>
  <div class="flash-message"><%= notice[0] %></div>
<% } %>

<% if (errors && errors.length > 0) { %>
  <div class="error-message">
    <ul>
      <% errors.forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  </div>
<% } %>

  
<!-- Login form -->
<form id="login-form" action="/account/login" method="post">
  <label for="email">Email</label>
  <input 
  type="email" id="email" name="account_email" required value="<%= locals.account_email || '' %>"
>

  <label for="password">Password</label>
  <input type="password" id="password" name="password" required>

  <button type="submit">Login</button>

  <p id="SignUp">
    Don't have an account? <a href="/account/register">Register here</a>
  </p>
</form>



  
