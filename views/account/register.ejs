<h1><%= title %></h1>

<!-- Flash message display -->
<% if (locals.notice) { %>
  <div class="flash-message"><%= notice %></div>
<% } %>

<!-- Registration form -->
<form id="registration-form" action="/account/register" method="post">
  <label for="first_name">First Name</label>
<input type="text" id="first_name" name="account_firstname" required 
  value="<%= typeof account_firstname !== 'undefined' ? account_firstname : '' %>">

<label for="last_name">Last Name</label>
<input type="text" id="last_name" name="account_lastname" required 
  value="<%= typeof account_lastname !== 'undefined' ? account_lastname : '' %>">

<label for="email">Email</label>
<input type="email" id="email" name="account_email" required 
  value="<%= typeof account_email !== 'undefined' ? account_email : '' %>">

  <label for="password">Password</label>
  <input type="password" id="password" name="account_password" required
    title="Password must be at least 12 characters and contain at least 1 number, 1 capital letter, and 1 special character.">
  
  <!-- Optional show/hide password -->
  <label><input type="checkbox" onclick="togglePassword()"> Show Password</label>

  <button type="submit">Register</button>
</form>

<script>
  function togglePassword() {
    const pw = document.getElementById("password")
    pw.type = pw.type === "password" ? "text" : "password"
  }
</script>
